<h2>User</h2>

<ul>

  <li>
    <strong>Name:</strong>
    <%= @user.name %>
  </li>

  <li>
    <strong>Email:</strong>
    <%= @user.email %>
  </li>

  <li>
    <strong>Bio:</strong>
    <%= @user.bio %>
  </li>
</ul>

<h3>Posts</h3>
<table>
  <tr>
    <th>Name</th>
    <th>Body</th>
  </tr>
  <%= for post <- @posts do %>
    <tr>
      <td><%= post.title %> </td>
      <td><%= post.body %> </td>
    </tr>
  <% end %>

</table>

